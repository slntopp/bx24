{
  "name": "bx24",
  "version": "0.1.3",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "description": "With this package, you can use promise in applications for Bitrix24, that are hosted in the Bitrix cloud",
  "repository": {
    "type": "git",
    "url": "https://github.com/slntopp/bx24.git"
  },
  "author": {
    "name": "Aleksandr Astashkin",
    "email": "astashinav@gmail.com"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --coverage --config jestconfig.json",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "webpack --mode=production",
    "doc": "typedoc --out docs --exclude \"**/*test.ts\" --readme README.md --mode file --gaID UA-143442368-1 src",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.4.0",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.0",
    "@babel/preset-env": "7.4.1",
    "@babel/preset-typescript": "7.3.3",
    "@babel/types": "^7.4.4",
    "@types/jest": "^24.0.15",
    "babel-loader": "^8.0.6",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "files": [
    "lib/**/*"
  ]
}
